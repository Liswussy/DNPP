    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_border"
        android:backgroundTint="#C8C8C8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FDF646"
            android:elevation="10dp"
            android:gravity="center"
            android:text="Select A Task"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_new_prd"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="Add New Product"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_sales_report"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="Sales Report"
                android:textSize="14sp"

                />


            <!--            <Button-->
<!--                android:id="@+id/btn_updt_product"-->
<!--                android:layout_width="180dp"-->
<!--                android:layout_height="150dp"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/search_shape"-->
<!--                android:backgroundTint="#FDF646"-->
<!--                android:text="Update Product"-->
<!--                android:textSize="14sp" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_prd_del"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="Product Delivery"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_view_prd"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="View Products"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_mnge_emp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="Manage Employee"
                android:textSize="14sp"

                />

            <Button
                android:id="@+id/btn_del_rep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_shape"
                android:backgroundTint="#FDF646"
                android:text="Delivery Report"
                android:textSize="14sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>